<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        
        <shape>
            <solid android:color="@color/grey_transparent" />
            <!-- 
            <gradient android:angle="270" android:endColor="@color/grey_transparent" android:startColor="@color/grey_transparent" />

            <stroke android:width="1dp" android:color="@color/blue" />

            <corners android:radius="0dp" />
 -->
            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/blue" />

            <stroke android:width="0dp" android:color="@color/blue" />

            <corners android:radius="3dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
    <item android:drawable="@drawable/underline" android:state_checked="true" />
    <item><shape>
        
        <solid android:color="@color/transparent" />
        <!-- 
            <gradient android:angle="270" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <stroke android:width="0dp" android:color="@color/blue" />

            <corners android:radius="1dp" />
 -->
            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>

</selector>