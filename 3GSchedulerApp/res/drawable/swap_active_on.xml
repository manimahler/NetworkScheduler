<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--  over-line  -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:bottom="15dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="line" >
            <stroke
                android:width="3dp"
                android:color="@android:color/white" />

            <size android:height="1dp" />

            <solid android:color="@color/transparent" />

            <padding
                android:bottom="0dp"
                android:left="1dp"
                android:right="1dp"
                android:top="12dp" />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/ic_action_down" />
    </item>
    


</layer-list>